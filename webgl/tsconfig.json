{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "strict": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    //"outDir": "dist",
    "paths": {
      "@/*": ["src/*"]
    },
  },
  "include": ["./src/**/*"],
}
