{
  "compilerOptions": {
    "target": "es5",
    "module": "ES2015",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "strict": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "skipLibCheck": true,
    //"declaration": true,
    "outDir": "dist/tsdist",
    "paths": {
      "@/*": ["src/*"]
    },
  },
  "include": ["./src/**/*"],
}
